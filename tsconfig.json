{
  "compilerOptions": {
    "baseUrl": "src",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "es6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": [
      "dom",
      "es6",
      "scripthost",
      "es2015",
      "es2019"
    ],
    "types": [
      "mathjax"
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}
